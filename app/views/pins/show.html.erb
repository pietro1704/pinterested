<p id="notice"><%= notice %></p>
<% if @pin.nil? %>
  <strong> You have no pins yet</strong>
  <%= link_to 'New Pin', new_pin_path %>
<% else %>
  <%= image_tag @pin.image, width: "100%" %><br/>
  <strong>Description:</strong>
  <%= @pin.description %>
  <br/>
  <%= link_to 'Edit', edit_pin_path(@pin) %>
<% end %>
<%= link_to 'Back', pins_path %>
